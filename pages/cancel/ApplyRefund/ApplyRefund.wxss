/* pages/cancel/ApplyRefund/ApplyRefund.wxss */
.header{
  padding: 0 20rpx;
  height: 170rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.header_img{
  width: 140rpx;
  height: 140rpx;
}
.header_img image{
  width: 140rpx;
  height: 140rpx;
}
.header_text{
  color: rgb(24,24,24);
  margin-left: 50rpx;
}
/* 原因 */
/* pages/cancel/cancellationOrder/cancellationOrder.wxss */
.reason{
  width: 100%;
  height: 87rpx;
  background-color: #fff;
  font-size: 24rpx;
  line-height: 87rpx;
  padding: 0 20rpx;
}
.reason-all{
  width: 100%;
}
.reason-one{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  margin-top: 1rpx;
  font-size: 24rpx;
  color: rgb(21,21,21);
  padding: 0 20rpx;
}

