}
/* 按钮 */
.apply{
position:fixed;
bottom: 0;
display:flex;
padding: 0 20rpx;
padding-bottom: 20rpx;
width: 100%;
}
.apply_no,.apply_plase{
width: 49.5%;
height: 98rpx;
line-height: 98rpx;
background-color: rgb(217,217,217);
border-radius: 10rpx;
text-align: center;
color: #fff;
}