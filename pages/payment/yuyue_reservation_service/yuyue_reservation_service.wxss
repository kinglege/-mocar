/* pages/home/ticket/service_order/service_order.wxss */

.order_info {
  height: 160rpx;
  background-color: #fff;
  justify-content: space-between;
  align-items: center;
}

.order_info_img {
  width: 63rpx;
  height: 63rpx;
  margin-top: 10rpx;
  margin-left: 20rpx;
}

.order_name, .order_car, .order_type {
  font-size: 26rpx;
  color: rgb(34, 34, 34);
  font-weight: 700;
}

.order_right {
  margin-bottom: 10rpx;
}

.order_tel {
  font-size: 26rpx;
  color: rgb(191, 191, 191);
  padding-left: 60rpx;
  margin-top: 6rpx;
}

.order_info_name {
  padding-left: 20rpx;
}

.order_info_img image {
  width: 63rpx;
  height: 63rpx;
}

.order_icon {
  width: 18rpx;
  height: 23rpx;
}

.order_icon image {
  width: 18rpx;
  height: 23rpx;
}

/* 服务类目 */

.service_category {
  padding: 0 20rpx;
  margin-top: 15rpx;
  background-color: #fff;
  height: 80rpx;
  line-height: 80rpx;
}

.category_tit {
  color: rgb(34, 34, 34);
  font-size: 28rpx;
  font-weight: 700;
}

.category_product {
  margin-top: 2rpx;
  padding: 0 20rpx;
  background-color: #fff;
  height: 180rpx;
  justify-content: space-between;
  align-items: center;
}

.product_img {
  width: 140rpx;
  height: 140rpx;
}

.product_img image {
  width: 140rpx;
  height: 140rpx;
}

.product_left {
  align-items: center;
  padding-left: 30rpx;
}

.product_name {
  padding-left: 30rpx;
  font-size: 26rpx;
  color: rgb(24, 24, 24);
  font-weight: 700;
}

.product_right {
  color: red;
  letter-spacing: 2rpx;
}

/* 线下门店 */

.store_tit {
  padding: 0 20rpx;
  margin-top: 15rpx;
  background-color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  color: rgb(34, 34, 34);
  font-size: 28rpx;
  font-weight: 700;
}

.store_all{
  height: 130rpx;
  background-color: #fff;
  padding: 0 20rpx;
  justify-content: space-between;
  align-items: center;
}
.store_left_introduce{
  margin-left: 25rpx;
}
.store_left_top{
  padding-bottom: 15rpx;
}
.store_left_img{
  width: 90rpx;
  height: 90rpx;
}
.store_txt1{
  font-size: 26rpx;
  color: rgb(24,24,24);
  font-weight: 700;
}
.store_left_bottom{
  color: rgb(191,191,191);
  font-size: 22rpx;

}
.store_txt2{
  font-size: 22rpx;
  color: rgb(191,191,191);
  padding: 5rpx 0 0 15rpx;
}
.store_left_img image{
  width: 90rpx;
  height: 90rpx;
}
.store_right{
  width: 15rpx;
  height: 23rpx;
}
.store_right image{
  width: 15rpx;
  height: 23rpx;
}
/* 温馨提示 */
.tips{
  justify-content: center;
  align-items: center;
  height: 80rpx;
  background-color: #fff;
  margin:5rpx 0;
}
.tips_img{
  width: 26rpx;
  height: 26rpx;
}
.tips_img image{
  width: 26rpx;
  height: 26rpx;
}
.tips_txt1{
  padding-left: 20rpx;
  color: rgb(24,24,24);
  font-size: 26rpx;
  font-weight: 700;
}
.tips_txt2{
  color: rgb(210,210,210);
  font-size: 26rpx;
}
/* 底部 */
.settle_accounts{
  width: 100%;
  display: flex;
  padding: 0 20rpx;
  justify-content: space-around;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background-color:#fff;
}
.accounts_left{
  font-size: 24rpx;
  color: rgb(191,191,191);
  justify-content: center;
  align-items: center;
}
.accounts_right{
  width: 90%;
  margin-top: 10rpx;
  height: 80rpx;
  background-color: rgb(233,38,64);
  font-size: 36rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 10rpx;
  color: rgb(255,255,255);
}
.accounts_left_price{
  font-size: 30rpx;
  color: rgb(239,52,65);
}